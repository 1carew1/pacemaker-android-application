<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.pacemaker">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".main.PacemakerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.Welcome">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".controllers.Signup" />
        <activity android:name=".controllers.Login" />
        <activity android:name=".controllers.CreateActivity" />
        <activity android:name=".controllers.ActivitiesList" />
        <activity android:name=".controllers.ShowMyActivity" />
        <activity
            android:name=".controllers.FriendsList"
            android:label="@string/title_activity_friends_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
