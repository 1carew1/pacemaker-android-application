<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="org.pacemaker.controllers.ProgressReports">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/progressReportsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/finishedActivities"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />


        <ListView
            android:id="@+id/finishedActivitiesListView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_below="@+id/progressReportsTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/progressTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/finishedActivitiesListView"
            android:layout_marginTop="20dp"
            android:text="Progress Reports"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textStyle="bold" />

        <View
            android:id="@+id/lineDivider1"
            style="@style/Divider"
            android:layout_below="@+id/progressTextView"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/lastWeekOfWorkouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lineDivider1"
            android:layout_marginTop="10dp"
            android:text="Results of Last Week of workouts"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastWeekOfWorkoutsResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lastWeekOfWorkouts"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/lineDivider2"
            style="@style/Divider"
            android:layout_below="@+id/lastWeekOfWorkoutsResults"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/lastMonthOfWorkouts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lineDivider2"
            android:layout_marginTop="10dp"
            android:text="Results of Last Month of workouts"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastMonthOfWorkoutsResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lastMonthOfWorkouts"
            android:layout_marginTop="10dp" />

        <View
            android:id="@+id/lineDivider3"
            style="@style/Divider"
            android:layout_below="@+id/lastMonthOfWorkoutsResults"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/overallWorkout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/lineDivider3"
            android:layout_marginTop="10dp"
            android:text="Results of All Time Workouts"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/overallWorkoutResults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/overallWorkout"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

</ScrollView>
